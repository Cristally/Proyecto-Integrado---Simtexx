const { DataTypes } = require('sequelize');
const sequelize = require('../config/db');
const bcrypt = require('bcryptjs');

const Usuario = sequelize.define('Usuario', {
  id: {
    type: DataTypes.INTEGER,
    primaryKey: true,
    autoIncrement: true,
  },
  nombre: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  correo: {
    type: DataTypes.STRING,
    allowNull: false,
    unique: true,
    validate: { isEmail: true },
  },
  contraseña: {
    type: DataTypes.STRING,
    allowNull: false,
  },
  rol: {
    type: DataTypes.STRING,
    allowNull: false,
    defaultValue: 'usuario', // Rol por defecto
    validate: { isIn: [['usuario', 'admin']] },
  },
  estado: {
    type: DataTypes.STRING,
    allowNull: false,
    defaultValue: 'activo', // Para el "soft delete"
    validate: { isIn: [['activo', 'inactivo']] },
  },
}, {
  // Hook: Encripta la contraseña automáticamente antes de guardar
  hooks: {
    beforeCreate: async (usuario) => {
      const salt = await bcrypt.genSalt(10);
      usuario.contraseña = await bcrypt.hash(usuario.contraseña, salt);
    },
    
    beforeUpdate: async (usuario) => {
      // Solo encripta si el campo 'contraseña' fue modificado
      if (usuario.changed('contraseña')) {
        const salt = await bcrypt.genSalt(10);
        usuario.contraseña = await bcrypt.hash(usuario.contraseña, salt);
      }
    }
    // --------------------
  },
  timestamps: true, // Añade createdAt y updatedAt
});

module.exports = Usuario;